# Database Configuration
# Get this from your Neon database dashboard
DATABASE_URL="postgresql://username:password@host.neon.tech/database_name?sslmode=require"

# Neon Database Details (Optional - for reference)
NEON_PROJECT_ID="your-project-id"
NEON_BRANCH_ID="your-branch-id" 
NEON_DATABASE="neondb"
NEON_ROLE="your_database_owner"

# Better Auth Configuration
# Generate a secure random secret key for production
BETTER_AUTH_SECRET="your-very-secure-secret-key-change-this-in-production"
# Set to your domain in production (e.g., https://yourdomain.com)
BETTER_AUTH_URL="http://localhost:3000"

# App URL Configuration (Client-side)
# This is used by the auth client to determine the base URL for API calls
# In production, set this to your domain (e.g., https://yourdomain.com)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Vercel Blob Configuration
# Get this token from your Vercel Blob store dashboard
# Required for file uploads and storage operations (avatars, todo images)
BLOB_READ_WRITE_TOKEN="your-blob-read-write-token-from-vercel-dashboard"